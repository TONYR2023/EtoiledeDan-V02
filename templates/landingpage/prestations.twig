{% extends 'base.html.twig' %}

{% block title %}{{ 'prestations.title' | trans }}{% endblock %}

{% block head %} 
<meta name="description" content="Découvrez nos prestations variées pour un séjour inoubliable : hostellerie confortable, dégustations régionales, massages relaxants, chef à domicile et découvertes touristiques. Profitez d'une expérience unique et personnalisée avec nous.">
<meta name="keywords" content="letoilededan, etoile, dan, gite, gîte, gard, france, caractère, jacouzi, piscine, chef à domicile, massage, découverte touristique, produits locaux, 
    famillial, détente, nature, convivial, atypique, charmant, calme, PMR, handicap" />
{% endblock %}


{% block body %}
    <main>
        <div class="backgroundImageContainer">
            <img src="{{ asset('img/prestationsPage/prestations.png') }}" alt="massage" class="backgroundImage"/>
            <div class="buttonContainer">
                {{ include('reservation/boutonReservation.twig') }}
            </div>
        </div>

        <h2 class="mt-2">{{ 'prestations.prestations' | trans }}</h2>
        <div class="d-flex justify-content-center">
            <hr class="separator"/>
        </div>

        {#        {/*------------------Presentation----------------*/} #}
        <section>
            <div class=" mx-4">
                <p class="align-items-center text-center ">
                    {{ 'prestations.text1' | trans }}
                </p>
                <p class="align-items-center text-center">
                   {{ 'prestations.text2' | trans }}
                </p>
                <p class="align-items-center text-center">
                    {{ 'prestations.text3' | trans }}
                </p>
            </div>
            <div class="d-flex justify-content-center">
                <hr class="separator"/>
            </div>

            {#            {/*------------------Presentation----------------*/} #}
            <div class="container-fluid">
                <div class="row my-2 mx-1 justify-content-around ">
                    {#                    {/*---------------hostellerie---------------*/} #}
                    <article class="cadre col-md-2 mb-2">
                        <div class="d-flex justify-content-center">
                            <img
                                    src="{{ asset('img/prestationsPage/prestations2.png') }}"
                                    alt="hostellerie"
                                    class="presta-img"
                            />
                        </div>
                        <div>
                            <h3 class="text-center">
                                {{ 'prestations.hostelry.title' | trans }}
                                <i class="bi bi-bed"></i>
                            </h3>
                            <p class="m-2">
                                {{ 'prestations.hostelry.text1' | trans }}
                            </p>
                            <p class="text-primary">{{ 'prestations.hostelry.link' | trans }}</p>
                        </div>
                    </article>


                    {#                    {/*---------------découverte touristique---------------*/} #}
                    <article class="cadre col-md-2 mb-2">
                        <div class="d-flex justify-content-center">
                            <img
                                    src="{{ asset('img/prestationsPage/prestations5.png') }}"
                                    alt="tourisme"
                                    class="presta-img"
                            />
                        </div>
                        <div>
                            <h3 class="text-center">
                                {{ 'prestations.discovery.title' | trans }}
                               <i class="bi bi-compass"></i>
                            </h3>
                            <p class="m-2">
                                {{ 'prestations.discovery.text1' | trans }}
                            </p>
                              <p class="text-primary">{{ 'prestations.discovery.link' | trans }}</p>
                        </div>
                    </article>

                    {#                    {/*---------------degustation---------------*/} #}
                    <article class="cadre col-md-2 mb-2">
                        <div class="d-flex justify-content-center">
                            <img
                                    src="{{ asset('img/prestationsPage/prestations1.png') }}"
                                    alt="degustation"
                                    class="presta-img"
                            />
                        </div>
                        <div>
                            <h3 class="text-center">
                                {{ 'prestations.degustation.title' | trans }}
                                <i class="bi bi-wine-bottle"></i>

                            </h3>
                            <p class="m-2">
                                {{ 'prestations.degustation.text1' | trans }}
                            </p>
                            <a href="http://degustezsud.com">{{ 'prestations.degustation.link' | trans }}</a>
                        </div>
                    </article>

                    {#                    {/*---------------Massage---------------*/} #}
                    <article class="cadre col-md-2 mb-2">
                        <div class="d-flex justify-content-center">
                            <img src="{{ asset('img/prestationsPage/prestations3.png') }}" alt="massage" class="presta-img"/>
                        </div>
                        <div>
                            <h3 class="text-center">
                                {{ 'prestations.massage.title' | trans }}
                                <i class="bi bi-spa"></i>
                            </h3>
                            <p class="m-2">
                                {{ 'prestations.massage.text1' | trans }}
                            </p>
                             <a href="https://octao.fr/bienvenue/">{{ 'prestations.massage.link' | trans }}</a>
                        </div>
                    </article>

{#                    {/*---------------Chef à domicile---------------*/}#}
                    <article class="cadre col-md-2 mb-2">
                        <div class="d-flex justify-content-center">
                            <img src="{{ asset('img/prestationsPage/prestations4.png') }}" alt="chef" class="presta-img"/>
                        </div>
                        <div>
                            <h3 class="text-center">
                                {{ 'prestations.chief.title' | trans }}
                                <i class="bi bi-hat-chef"></i>
                            </h3>
                            <p class="m-2">
                                {{ 'prestations.chief.text1' | trans }}
                            </p>
                             <a href="https://www.takeachef.com/fr-fr">{{ 'prestations.chief.link' | trans }}</a>
                        </div>
                    </article>


                    {#                    {/*---------------fin---------------*/} #}
                </div>
            </div>
        </section>
    </main>
{% endblock %}
