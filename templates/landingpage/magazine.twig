{% extends 'base.html.twig' %}

{% block title %}Magazine - Gîte Spacieux et Accessible dans le Gard{% endblock %}

{% block head %}
    <meta name="description" content="Découvrez notre gîte spacieux et accessible aux personnes à mobilité réduite (PMR) dans le Gard. Entre Nîmes, Alès et Montpellier, notre gîte offre un confort exceptionnel et des aménagements adaptés."/>
    <meta name="keywords" content="letoilededan, etoile, dan, gite, gîte, gard, france, caractère, jacouzi, piscine, chef à domicile, massage, découverte touristique, produits locaux, 
    famillial, détente, nature, convivial, atypique, charmant, calme, PMR, handicap" />

    <!-- Open Graph -->
    <meta property="og:title" content="Magazine - Gîte Spacieux et Accessible dans le Gard" />
    <meta property="og:description" content="Découvrez notre gîte spacieux et accessible aux personnes à mobilité réduite (PMR) dans le Gard. Entre Nîmes, Alès et Montpellier, notre gîte offre un confort exceptionnel et des aménagements adaptés." />
    <meta property="og:image" content="{{ asset('img/magazinePage/magazine.png') }}" />
    <meta property="og:url" content="{{ app.request.uri }}" />
    <meta property="og:type" content="article" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Magazine - Gîte Spacieux et Accessible dans le Gard" />
    <meta name="twitter:description" content="Découvrez notre gîte spacieux et accessible aux personnes à mobilité réduite (PMR) dans le Gard. Entre Nîmes, Alès et Montpellier, notre gîte offre un confort exceptionnel et des aménagements adaptés." />
    <meta name="twitter:image" content="{{ asset('img/magazinePage/magazine.png') }}" />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "TouristAttraction",
      "name": "Gîte Spacieux et Accessible dans le Gard",
      "description": "Découvrez notre gîte spacieux et accessible aux personnes à mobilité réduite (PMR) dans le Gard. Entre Nîmes, Alès et Montpellier, notre gîte offre un confort exceptionnel et des aménagements adaptés.",
      "image": "{{ asset('img/magazinePage/magazine.png') }}",
      "url": "{{ app.request.uri }}",
      "address": {
            "@type": "PostalAddress",
            "streetAddress": "61, route départementale 6110",
            "addressLocality": "Crespian",
            "addressRegion": "Occitanie",
            "postalCode": "30260",
            "addressCountry": "France"
      },
      "geo" : {
            "@type": "GeoCoordinates",
            "latitude": 43.882362,
            "longitude": 4.095823
      },
       "contactPoint": {
        "@type": "ContactPoint",
        "telephone":[ "+33 06 22 57 15 52", "+33 06 78 44 27 07"],
        "contactType": "Réservations"
      },
          "priceRange": "100-300 EUR",
      "amenityFeature": [
        {
          "@type": "LocationFeatureSpecification",
          "name": "Jacuzzi",
          "value": true
        },
        {
          "@type": "LocationFeatureSpecification",
          "name": "Piscine",
          "value": true
        },
        {
          "@type": "LocationFeatureSpecification",
          "name": "Chef à domicile",
          "value": true
        },
        {
          "@type": "LocationFeatureSpecification",
          "name": "Massage",
          "value": true
        },
        {
          "@type": "LocationFeatureSpecification",
          "name": "Produits locaux",
          "value": true
        },
        {
          "@type": "LocationFeatureSpecification",
          "name": "Accessible PMR",
          "value": true
        }
      ],
      "openingHours": "Mo-Su",
      "offers": {
        "@type": "Offer",
        "url": "{{ path('reservation') }}",
        "priceCurrency": "EUR",
          "price": "450.00",
        "availability": "https://schema.org/InStock"
      }
    }
    </script>


{% endblock %}

{% block body %}
    <main>
        <div class="backgroundImageContainer">
            <img src="{{ asset('img/magazinePage/magazine.png') }}" alt="Image de couverture du magazine" class="backgroundImage"/>
            <div class="buttonContainer">
                {{ include('reservation/boutonReservation.twig') }}
            </div>
        </div>

        <h2 class="mt-2">Magazine</h2>
        <div class="d-flex justify-content-center">
