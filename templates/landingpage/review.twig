		{#---------------cadre---------------#}
			<div class="backgroundSection"> <div class="title">
				<h2>
					{{ 'review.title' | trans }}
				</h2>
			</div>

			<section class="blockReview">
				<article
					class="container1">{# <img src="{{ asset('img/logo.png') }}" alt="Logo"/> #}
				</article>
				<article
					class="container2">

					{# Affichage des messages de succ√®s #}
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ message }}
						</div>
					{% endfor %}

					{{ form_start(form) }}
					{{ form_row(form.name, {'label': 'review.name' | trans }) }}
					{{ form_row(form.email, {'label': 'review.email' | trans }) }}
					{{ form_row(form.comment, {'label': 'review.comment' | trans }) }}
					{{ form_row(form.rating, {'label': 'review.rating' | trans }) }}

					<div class="butContainer">
						<button class="butAddReview">{{ 'review.but-send' | trans }}</button>
					</div>
					{{ form_end(form) }}
				</article>
			</section>
		</div>
	</main>
{% endblock %}
