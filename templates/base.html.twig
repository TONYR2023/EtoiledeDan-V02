        <span>
            <svg id="phoneIcon" onclick="togglePhoneNumbers()" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-phone" viewBox="0 0 16 16" style="cursor: pointer;">
                <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2"/>
            </svg>
            <span id="phoneNumbers" style="display: none;">
                <a href="tel:0622571552">06 22 57 15 52</a> / <a href="tel:0678442707">06 78 44 27 07</a>
            </span>
        </span>

        <span>
            <svg id="contactIcon" onclick="toggleContact()" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16" style="cursor: pointer;">
                <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586zm3.436-.586L16 11.801V4.697z"/>
            </svg>
            <div id="contactButton" style="display: none;">
            <a href="{{ path('app_contact') }}">Contact</a>
            </div>
        </span>

        <span>
    <button id="langToggleBtn" class="btn btn-secondary btn-sm small-btn" onclick="toggleLanguage()" style="font-size: 12px;" data-href-fr="{{ path('accueil') }}" data-href-en="{{ path('acceuilanglais') }}">
        FR
    </button>
</span>

<script>
    function togglePhoneNumbers() {
        var phoneNumbers = document.getElementById('phoneNumbers');
        phoneNumbers.style.display = (phoneNumbers.style.display === 'none') ? 'inline' : 'none';
    }

    function toggleContact() {
        var contactButton = document.getElementById('contactButton');
        contactButton.style.display = (contactButton.style.display === 'none') ? 'inline' : 'none';
    }

    function toggleLanguage() {
        var button = document.getElementById('langToggleBtn');
        var currentLanguage = button.textContent.trim();
        if (currentLanguage === 'FR') {
            button.textContent = 'EN';
            window.location.href = button.getAttribute('data-href-fr');
        } else {
            button.textContent = 'FR';
            window.location.href = button.getAttribute('data-href-en');
        }
    }
</script>


    <nav class="navbar navbar-expand-lg " data-bs-theme="dark">
